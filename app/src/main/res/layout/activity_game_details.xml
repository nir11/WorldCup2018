<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.android.worldcup2018details.GameDetails"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="8dp"
        android:paddingBottom="5dp">
        <TextView
            android:id="@+id/match_time"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="italic"
            android:paddingRight="8dp"/>
        <ImageView
            android:id="@+id/home_team_image"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@mipmap/england"/>
        <TextView
            android:id="@+id/home_team"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="England"
            android:textAllCaps="true"
            android:textAppearance="?android:textAppearanceMedium" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#006064"
            android:gravity="center"
            android:text="-"
            android:textColor="@android:color/white"
            android:paddingBottom="5dp"/>
        <TextView
            android:id="@+id/away_team"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Belgium"
            android:textAllCaps="true"
            android:textAppearance="?android:textAppearanceMedium"/>

        <ImageView
            android:id="@+id/away_team_image"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:src="@mipmap/belgium"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/stadium"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:gravity="center_horizontal"
        android:src="@mipmap/luzniki05"/>

</LinearLayout>
